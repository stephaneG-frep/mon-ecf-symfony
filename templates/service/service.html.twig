{% extends 'base.html.twig' %}

{% block title %}Hello ServiceController!{% endblock %}

{% block body %}
<style>
    html, body { margin:0; padding: 0;background: radial-gradient(#262526, #F2F2F2);font-family: "barlow"; }

    nav { display: flex; justify-content: space-between;padding: 1rem 2rem;background: #262525; margin-bottom: 150px;}
    nav ul { display: flex; list-style: none;}
    nav li { padding-left: 1rem;}
    nav a { color: #f2f2f2; text-decoration: none; text-transform: uppercase; font-size: 0.7rem;}
    h2 { font-size: 1.5rem; color: #F2F2F2;}


   
    h1 { font-size: 2.5rem; text-align: center; color: #f2f2f2; text-shadow: 5px 5px 5px #262526;}






    main { margin-top: 200px;}
    .title { font-size: 2rem; color: #f2f2f2; text-shadow: 5px 5px 5px #262526; margin-top: 100px; margin-bottom: 100px;}
    .card-container { display: flex; align-content: space-around; flex-wrap: wrap; justify-content: center; width: auto; height: auto;}
    .card { display: flex; flex-wrap: wrap; flex-direction: column; justify-content: center; width: auto; height: auto; border: 1px solid #333; padding: 40px;
    margin-left: 10px; margin-right: 10px; margin-bottom: 20px; background: #8c99a3; color: #262526; box-shadow: 10px 10px 10px #f2f2f2;}
    .img { width: 300px; height: 180px;}
    .occas { font-size: 2.5rem; text-shadow: 10px 7px 7px #262526; color: #f2f2f2;}
    .container { text-align: center;}
    .center-children { text-align: center;}
    h3 { font-size: 1.9rem; text-shadow: 10px 7px 7px #333; color: #F5F5F5;}
    .display-4 { color: crimson;}



     /* pagination*/
     footer { margin-top: 200px;}
    #container { padding-top: 20px; margin-bottom: 30px;}
    #pagination { display: flex; justify-content: center;}
    .pages { width: 100px; line-height: 40px; text-align: center; border: 3px solid #f2f2f2;
     display: inline-block; text-decoration: none; color: #f2f2f2; background: #D92332;}
    .pages:not(:first-child) { margin-left: 15px;}
    .pages:first-child { border-radius: 10px 0 0 10px;}
    .pages:last-child { border-radius: 0 10px 10px 0;}
    .pages:hover { background: #D9777F;}
    
</style>

